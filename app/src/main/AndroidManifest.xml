<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.merscher.lbsvolleyball">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/lbs_volleyball_appicon_white_round"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".controller.SpieltagActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".controller.SpielerVerwaltungActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"></activity>

        <activity
            android:name=".controller.SpielerseiteActivity"
            android:label="@string/app_name"
            android:launchMode="standard"></activity>


        <activity
            android:name=".controller.AddSpielerActivity"
            android:label="@string/app_name"
            android:launchMode="standard"></activity>


        <activity
            android:name=".controller.EditSpielerActivity"
            android:label="@string/app_name"
            android:launchMode="standard"></activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>
</manifest>
