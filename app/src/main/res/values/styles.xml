<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#AE1732</item>
        <item name="colorPrimaryDark">#611321</item>
        <item name="colorAccent">#AE1732</item>
        <!--<item name="android:textColor">#1B1B1B</item>-->
        <!--<item name="android:textColorPrimary">#83AE1732</item>-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>


    </style>


    <style name="ListView" parent="@android:style/Widget.ListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:textColor">#1B1B1B</item>
    </style>

    <style name="BackGroundImageView">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/spieltag_aufmacher</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">#1B1B1B</item>
        <item name="android:textColorSecondary">#AE1732</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:colorControlNormal">@android:color/white</item>
        <item name="actionBarStyle">@style/My.ActionBar.Style</item>

    </style>

    <style name="My.ActionBar.Style" parent="Widget.AppCompat.ActionBar">

        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:colorControlNormal">@android:color/white</item>

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RobotoCalendarMonthText">
        <item name="fontPath">fonts/Cabin-Regular.ttf</item>
        <item name="android:textSize">@dimen/roboto_calendar_month_font</item>
        <item name="android:textColor">@color/roboto_calendar_month_font</item>
    </style>

    <style name="RobotoCalendarMonthArrow">
        <item name="android:tint">@color/roboto_calendar_month_arrow</item>
    </style>

    <style name="RobotoCalendarDayOfTheWeekText">
        <item name="fontPath">fonts/Cabin-Regular.ttf</item>
        <item name="android:textSize">@dimen/roboto_calendar_day_of_week_font</item>
        <item name="android:textColor">@color/roboto_calendar_day_of_the_month_font</item>
    </style>

    <style name="RobotoCalendarDayOfTheMonthText">
        <item name="fontPath">fonts/Cabin-Bold.ttf</item>
        <item name="android:textSize">@dimen/roboto_calendar_day_of_the_month_font</item>
        <item name="android:textColor">@color/roboto_calendar_day_of_the_month_font</item>
    </style>


</resources>

